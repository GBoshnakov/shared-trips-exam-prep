<section class="py-5 details" id="trip-details-page">
    <div class="container">
        <div class="destination">
            <div>
                <span class="icon"><i class="fas fa-map-marked-alt"></i></span>
                <h5> from <span>{{info.start}}</span> to <span>{{info.end}}</span> </h5>
            </div>
            <div>
                <span class="icon"><i class="fas fa-calendar-alt"></i></span>
                <h5> <span>{{info.date}}</span> at <span>{{info.time}}</span> </h5>
            </div>
        </div>
        <p class="line"></p>
        <div class="buddies-info">
            <i class="fas fa-users buddies"></i>
            <h5>Shared trip Buddies</h5>
            <div>
                <p>
                    {{#if info.buddiesList}}

                    {{info.buddiesList}}

                    {{else}}

                    there are no buddies yet...

                    {{/if}}
                </p>
            </div>
            <h5>Driver: <span>{{user.email}}</span> </h5>
        </div>
        <p class="line"></p>
        <h5 class="brand">Car Brand: <span class="lead">{{info.brand}}</span></h5>
        <div class="trip-info">
            <div>
                <img class="img-fluid rounded" src="{{info.image}}" alt="car-image">
            </div>
            <div class="trip-desc">
                <h5>Information about the trip</h5>
                <textarea class="lead" disabled>{{info.description}}</textarea>
                <h5>Price: <span class="lead">{{info.price}}</span> BGN</h5>

                {{#if hasUser}}

                <!-- if there are no logged in user do not show div with class actions  -->
                <div class="actions">
                    {{#if isOwner}}
                    <!-- Only for logged user and creator to this trip -->
                    <a href="/delete/{{info._id}}" class="btn btn-danger">Delete this trip</a>
                    <a href="/edit/{{info._id}}" class="btn btn-warning">Edit this trip</a>
                    {{else}}

                    {{#if hasJoined}}
                    <span class="btn btn-info">Already joined. Don't be late!</span>
                    {{else}}
                    {{#if info.remainingSeats}}
                    <a href="/join/{{info._id}}" class="btn btn-join">Join now, [ {{info.remainingSeats}} ] seats
                        left!</a>
                    {{else}}

                    <span class="btn btn-secondary">No seats available! [0]</span>
                    {{/if}}

                    {{/if}}
                    {{/if}}
                </div>

                {{/if}}
            </div>
        </div>
    </div>
</section>